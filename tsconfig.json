{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": ["es2017", "ES2021.String"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": "src",
    "paths": {
      "src/*": ["./*"]
    },
    "typeRoots": ["./node_modules/@types"],
    "noImplicitAny": false,
    "useUnknownInCatchVariables": false
  },
  "include": ["src", "*.png", "./jest.setup.ts"],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ],
}
